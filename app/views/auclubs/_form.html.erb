<%= form_for(@auclub) do |f| %>
  <% if @auclub.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@auclub.errors.count, "error") %> prohibited this auclub from being saved:</h2>

      <ul>
      <% @auclub.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :introduce %><br>
    <%= f.text_area :introduce, maxlength: 10, placeholder: "10글자이하로" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :apply_time %><br>
    <%= f.select :apply_time , [['상시모집', 0],['모집중', 1],['모집마감', 2]]%>
  </div>
  <div class="field">
    <%= f.label :meeting_time %><br>
    <%= f.text_field :meeting_time %>
  </div>
  <div class="field">
    <%= f.label :facebook %><br>
    <%= f.text_field :facebook %>
  </div>
  <div class="field">
    <%= f.label :tel %><br>
    <%= f.text_field :tel %>
  </div>
  <div class="field">
    <%= f.label :logo %><br>
    <%= f.file_field :logo %>
    <% if f.object.logo? %>
      <img src="<%= image_path f.object.logo.url %>" alt="ajouclublogo" height="150" width="150">
      <%= f.label :remove_logo %>
      <%= f.check_box :remove_logo %> 
    <% end %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, [['학술', 0],['체육', 1],['과학', 2],['종교', 3],['사회', 4],['창작', 5],['스포츠', 6],['예술', 7]] %>
  </div>
   
    <%= f.simple_fields_for :schedules do |s| %>
      <div class = "field">
        <%= s.label :period %> <br>
        <%= s.select :period, [['1학기', 0],['여름방학', 1],['2학기', 2],['겨울방학', 3]] %>
      </div> 
      <div class = "field">
        <%= s.label :content %> <br>
        <%= s.text_field :content %>
      </div>
    <% end %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


  
